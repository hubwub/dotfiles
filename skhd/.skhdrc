# equalize size of windows
lctrl + alt - 0 : chunkc tiling::desktop --equalize

# focus window
alt - a : chunkc tiling::window --focus west
alt - s : chunkc tiling::window --focus south
alt - d : chunkc tiling::window --focus north
alt - f : chunkc tiling::window --focus east

alt - h : chunkc tiling::window --focus west
alt - j : chunkc tiling::window --focus south
alt - k : chunkc tiling::window --focus north
alt - l : chunkc tiling::window --focus east

# move window
shift + alt - h : chunkc tiling::window --warp west
shift + alt - j : chunkc tiling::window --warp south
shift + alt - k : chunkc tiling::window --warp north
shift + alt - l : chunkc tiling::window --warp east

# send window to desktop
shift + alt - b : chunkc tiling::window --send-to-desktop $(chunkc get _last_active_desktop)
shift + alt - n : chunkc tiling::window --send-to-desktop prev
shift + alt - m : chunkc tiling::window --send-to-desktop next
shift + alt - 1 : chunkc tiling::window --send-to-desktop 1
shift + alt - 2 : chunkc tiling::window --send-to-desktop 2
shift + alt - 3 : chunkc tiling::window --send-to-desktop 3
shift + alt - 4 : chunkc tiling::window --send-to-desktop 4
shift + alt - 5 : chunkc tiling::window --send-to-desktop 5
shift + alt - 6 : chunkc tiling::window --send-to-desktop 6

# rotate windows clockwise and counterclockwise
alt - r : chunkc tiling::desktop --rotate 90
shift + alt - r : chunkc tiling::desktop --rotate 270

# rotate windows on x-axis and y-axis
shift + alt - x : chunkc tiling::desktop --mirror horizontal
shift + alt - y : chunkc tiling::desktop --mirror vertical

# make window float
shift + alt - space : chunkc tiling::window --toggle float

# make floating window fullscreen
shift + alt - f  : chunkc tiling::window --grid-layout 1:1:0:0:1:1

# make floating window fill centers
shift + alt - a  : chunkc tiling::window --grid-layout 4:4:1:1:2:2

# make floating window left-half of screen
shift + alt - s  : chunkc tiling::window --grid-layout 1:2:0:0:1:1

# make floating window fill right-half of screen
shift + alt - d  : chunkc tiling::window --grid-layout 1:2:1:0:1:1

# set insertion point for focused container
lctrl + alt - f : chunkc tiling::window --use-insertion-point cancel
lctrl + alt - h : chunkc tiling::window --use-insertion-point west
lctrl + alt - j : chunkc tiling::window --use-insertion-point south
lctrl + alt - k : chunkc tiling::window --use-insertion-point north
lctrl + alt - l : chunkc tiling::window --use-insertion-point east

# toggle window fullscreen
alt - g : chunkc tiling::window --toggle fullscreen

# toggle window native fullscreen
shift + alt - g : chunkc tiling::window --toggle native-fullscreen

# change layout of desktop
lctrl + alt - a : chunkc tiling::desktop --layout bsp
lctrl + alt - s : chunkc tiling::desktop --layout monocle
lctrl + alt - d : chunkc tiling::desktop --layout float
