#!/usr/bin/env bash

chunkc core::log_level error
chunkc core::plugin_dir ~/.chunkwm_plugins
chunkc core::hotload 0

chunkc set global_desktop_mode           monocle
chunkc set global_desktop_offset_top     16
chunkc set global_desktop_offset_bottom  32
chunkc set global_desktop_offset_left    16
chunkc set global_desktop_offset_right   16
chunkc set global_desktop_offset_gap     8 

chunkc set desktop_padding_step_size     10.0
chunkc set desktop_gap_step_size         5.0

chunkc set bsp_spawn_left                1
chunkc set bsp_optimal_ratio             1.618
chunkc set bsp_split_mode                optimal
chunkc set bsp_split_ratio               0.5

chunkc set window_focus_cycle            monitor
chunkc set mouse_follows_focus           intrinsic
chunkc set window_float_next             0
chunkc set window_region_locked          1

chunkc core::load tiling.so
chunkc core::unload border.so
chunkc core::unload ffm.so
